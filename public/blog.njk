---
title: Blog
layout: "base.njk"
---

<div class="section container">
    {# <h1 class="section-title">{{title}}}</h1> #}
    <ul class="articles_list">
        {%- for post in collections.post -%}
            <li>
                <article>
                    <img src="{{ post.data.image }}" alt="{{post.data.imageAlt}}" class="snippet_image">
                    <h3 class="snippet_title">{{ post.data.title }}</h3>
                </article>
            </li>
        {%- endfor %}}
    </ul>
</div>